<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parkrun.main.fragments.results.ResultsFriendsFragment">

    <FrameLayout
        android:id="@+id/friendResultsFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNoFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:fontFamily="@font/salsa"
            android:text="You have no parkrun buddies added yet! Go to the 'other' tab to search for other parkrunners!"
            android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="invisible"/>

    </FrameLayout>
</ScrollView>