<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.parkrun.main.LaunchingActivity">

    <ProgressBar
        android:id="@+id/progressBar_launching"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <ImageView
        android:contentDescription="@string/parkrun_logo"
        android:id="@+id/parkrun_title_login"
        android:layout_above="@+id/progressBar_launching"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:layout_marginBottom="26dp"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/parkrun_icon_inverted"/>

</RelativeLayout>
