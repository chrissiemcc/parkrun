<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parkrun.main.LoginActivity">

    <TextView
        android:id="@+id/athleteNumberPrefix"
        android:layout_above="@+id/txtPasswordLogin"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/txtAthleteNumberLogin"
        android:layout_width="wrap_content"
        android:text="@string/athleteLetter"
        android:textSize="24sp"/>

    <EditText
        android:ems="10"
        android:id="@+id/txtAthleteNumberLogin"
        android:inputType="number"
        android:layout_above="@+id/txtPasswordLogin"
        android:layout_alignEnd="@+id/txtPasswordLogin"
        android:layout_alignStart="@+id/txtPasswordLogin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <EditText
        android:ems="10"
        android:id="@+id/txtPasswordLogin"
        android:inputType="textPassword"
        android:layout_above="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"/>

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/btnLogin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:layout_height="wrap_content"
        android:layout_width="160dp"
        android:text="@string/login_button"
        android:textColor="@android:color/white"/>

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/btnRegister"
        android:layout_below="@+id/txtPasswordLogin"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/athleteNumberPrefix"
        android:layout_width="160dp"
        android:text="@string/register_button"
        android:textColor="@android:color/white"/>

    <ImageView
        android:contentDescription="@string/parkrun_title"
        android:id="@+id/parkrun_title_login"
        android:layout_above="@+id/txtAthleteNumberLogin"
        android:layout_centerHorizontal="true"
        android:layout_height="118dp"
        android:layout_marginBottom="26dp"
        android:layout_width="200dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/parkrun_title"/>

    <ProgressBar
        android:id="@+id/progressBar_login"
        android:layout_alignBottom="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</RelativeLayout>
